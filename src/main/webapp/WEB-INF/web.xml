<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
	<display-name>svc</display-name>
	<welcome-file-list>
		<welcome-file>views/login.jsp</welcome-file>
	</welcome-file-list>

	<resource-ref>
		<description>sqlserver datasource</description>
		<res-ref-name>jdbc/CMS-DB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<listener>
    	<description>sessionListener</description>
    	<listener-class>
        	exemplo3.listeners.SessionListener
    	</listener-class>
	</listener>
	<session-config>
		<!-- TODO - Mudar o session Timout.. valor baixo apenas para debug -->
		<session-timeout>1</session-timeout>
	</session-config>

</web-app>